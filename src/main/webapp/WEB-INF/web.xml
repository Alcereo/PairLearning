<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1"
        metadata-complete="false">

    <servlet>
        <servlet-name>Main page</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main page</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User cabinet</servlet-name>
        <jsp-file>/userCabinet.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>User cabinet</servlet-name>
        <url-pattern>/usercabinet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Chat room</servlet-name>
        <jsp-file>/ChatRoom.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat room</servlet-name>
        <url-pattern>/chatroom</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authorization error page</servlet-name>
        <jsp-file>/authorizationError.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization error page</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Connect filter</filter-name>
        <filter-class>ru.alcereo.pairlearning.servlets.ValidationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Connect filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--DB-->
    <resource-ref>
        <description>Database for application</description>
        <res-ref-name>jdbc/PairLearning</res-ref-name>
    </resource-ref>

</web-app>